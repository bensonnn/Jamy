(function() {
  var app = angular.module('JamyApp', ['ngRoute','JamyApp.controllers']);

  app.config(function ($routeProvider,$locationProvider) {
    $routeProvider
     .when('/latest/blogged/', {
      templateUrl: '<%= asset_path 'track.html.erb' %>',
      controller: 'BloggedCtrl',
      controllerAs: 'trackCtrl'
    })
     .when('/latest/released', {
      templateUrl: '<%= asset_path 'track.html.erb' %>',
      controller: 'ReleasedCtrl',
      controllerAs: 'trackCtrl'
    })
    .when('/popular', {
      templateUrl: '<%= asset_path 'track.html.erb' %>',
      controller: 'PopularCtrl',
      controllerAs: 'trackCtrl'
    })
    .when('/about', {
      templateUrl: '<%= asset_path 'about.html.erb' %>',
    })
    .when('/free', {
      templateUrl: '<%= asset_path 'free_stuff.html.erb' %>',
    })
     .when('/', {
      templateUrl: '<%= asset_path 'track.html.erb' %>',
      controller: 'BloggedCtrl',
      controllerAs: 'trackCtrl'
    })
    .otherwise({
      redirectTo: '/latest/blogged'
    });
    $locationProvider.html5Mode(true);
  });
})();