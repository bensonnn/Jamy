<div id='control-container' ng-show="currentTrack">
  <div class="container">
    <i class="fa fa-2x fa-fast-backward" ng-click='prev()'></i>
    <i ng-hide='currentTrack.isplaying' class="fa fa-2x fa-play active" ng-click='resume()'></i>
    <i ng-show='currentTrack.isplaying' class="fa fa-2x fa-pause active" ng-click='pause()'></i> 
    <i class="fa fa-2x fa-fast-forward" ng-click='next()'></i>
    <i>
      <span class="orange now-playing">
        Now Playing:<br>{{currentTrack.title}}
      </span>
    </i>
  </div>
</div>